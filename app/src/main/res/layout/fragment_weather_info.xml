<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="viewModel" type="gojek.assignment.com.gojek_androidassignment.viewmodels.MainWeatherViewModel"/>

    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#F5F6F7"
            android:layout_height="match_parent"
            tools:context=".fragments.WeatherInfoFragment">

        <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="96sp"
                tools:text="20"
                android:fontFamily="sans-serif-black"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                android:id="@+id/textCurrentWeather"
                android:textColor="@color/text_color_main"
                android:text="@{viewModel.responseModel.weatherResponseModel.current.temp_c}"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/textCurrentWeather"
                  app:layout_constraintLeft_toRightOf="parent"
                  app:layout_constraintRight_toLeftOf="parent"
                  android:fontFamily="sans-serif-thin"
                  tools:text="Bangalore"
                  android:textColor="@color/text_color_sub"
                  android:textSize="36sp"
                  android:id="@+id/textCurrentCity"
                  android:text="@{viewModel.responseModel.weatherResponseModel.location.name}"

        />

        <android.support.v7.widget.RecyclerView android:layout_width="wrap_content"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintTop_toBottomOf="@id/textCurrentCity"
                                                android:id="@+id/listForecast"
                                                android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


    </android.support.constraint.ConstraintLayout>

</layout>